# Required Settings
# Telegram Bot Token (obtained from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Akismet API Key (obtained from akismet.com)
AKISMET_API_KEY=your_akismet_api_key_here

# Akismet Blog URL (associated with your Akismet account)
AKISMET_BLOG_URL=https://your-blog-url.com

# Akismet API URL
AKISMET_API_URL=https://your_key.rest.akismet.com/1.1/comment-check

# GigaChat Auth Key (obtained from Sberbank)
GIGACHAT_AUTH_KEY=your_gigachat_auth_key_here

# GigaChat Scope (e.g., GIGACHAT_API_PERS)
GIGACHAT_SCOPE=your_gigachat_scope_here

# GigaChat API URL
GIGACHAT_API_URL=https://gigachat.devices.sberbank.ru/api/v1

# GigaChat Auth URL
GIGACHAT_AUTH_URL=https://ngw.devices.sberbank.ru:9443/api/v2/oauth

# GigaChat Model
GIGACHAT_MODEL=GigaChat

# GigaChat Prompt Template
GIGACHAT_PROMPT_TEMPLATE=Пользовательский запрос: {userMessage}\n\nТаблица специалистов:\n{specialistsText}\n\nНайдите специалистов, которые могут помочь с запросом пользователя, и предоставьте их имена и телефоны.

# Path to data files (specialists.txt, contact_keywords.txt)
DATA_PATH=data/

# Path to log file
LOG_PATH=logs/bot.log

# Application language (en/ru)
APP_LANGUAGE=ru

# Optional Settings
# Telegram Webhook Secret (for webhook signature verification)
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Enable spam checking (true/false)
SPAM_CHECK_ENABLED=true

# Enable contact request checking (true/false)
CONTACT_CHECK_ENABLED=true

# Spam handling strategy (warn/warn_delete/silent_delete/delete_ban)
SPAM_STRATEGY=delete_ban

# Guzzle HTTP client timeout (seconds)
GUZZLE_TIMEOUT=5

# Guzzle HTTP client connect timeout (seconds)
GUZZLE_CONNECT_TIMEOUT=2